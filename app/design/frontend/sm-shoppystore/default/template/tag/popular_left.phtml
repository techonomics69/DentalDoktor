<div class="block block-tags block-tags-left">
    <div class="block-title">
        <strong><span><?php echo $this->__('Hot Tags'); ?></span></strong>
    </div>
    <div class="block-content">
        <ul class="tags-list">
            <?php $count = 0; foreach ($this->getTags() as $_tag): ?>
				<?php $count++;?>
                <li><a href="<?php echo $_tag->getTaggedProductsUrl() ?>" style="font-size:<?php echo $_tag->getRatio()*70+75 ?>%;"><?php echo $this->htmlEscape($_tag->getName()) ?></a></li>
				<?php if($count == 10) break;?>
			<?php endforeach; ?>
        </ul>
		<div class="view-all-tag" >
			<a title="<?php echo $this->__('View more')?>" href="<?php echo $this->getUrl('tag/list') ?>"><?php echo $this->__('View more') ?></a>
		</div>
    </div>
</div>
